<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/verdeazulescuro</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeStyle">@style/ActionModeGray</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>
        <item name="colorPrimary">@color/verdeazulescuro</item>
        <item name="colorPrimaryDark">@color/verdeazulescurotop</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/verdeazulescuro</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="MaterialCustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlHighlight">@color/verdeazulescuro</item>â€‹
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>


    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>
    <!-- List -->

    <style name="BiggerTitleCard">
       	<item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_description_card</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MediumDescriptionCard">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SmallerDescription">
        <item name="android:textColor">@color/verde_text_card</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/branco</item>
    </style>


    <style name="SmallerDescriptionCard">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="SmallerDescriptionCardGreen">
        <item name="android:textColor">@color/verdeazul</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:singleLine">false</item>
    </style>


    <!-- Settings -->

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarStyle.Trans">
        <item name="android:paddingTop">@dimen/status_bar_padding</item>
    </style>

    <style name="ActionModeGray" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/brancocinza</item>
        <item name="backgroundSplit">@color/brancocinza</item>
        <item name="titleTextStyle">@style/ActionModeTitleDarkGreen</item>
        <!--<item name="android:subtitleTextStyle">@android:style/TextAppearance.Widget.ActionMode.Subtitle</item>-->
    </style>

    <style name="ActionModeTitleDarkGreen" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/verdeescuro</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


	<style name="AppTheme.Splash" parent ="AppTheme">
    <item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/verdeazulescuro</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/background_material_light</item>
    </style>


</resources>



